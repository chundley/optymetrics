div.profile
  h2 User Profile
  h3 Change Password 
  form(method='POST', action='/profile/password/change')
    label User: #{session.user.email}
    label(for='password') Password 
    input(type='password', name='password')
    label(for='confirm') Confirm Password
    input(type='password', name='confirm')
    button(type='submit', class='btn btn-primary', style='display: block; margin-bottom: 10px') Submit 
    - if(message)
      div(class='alert alert-#{message.level}') #{message.content}
