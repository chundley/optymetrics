doctype 5
html(lang="en")
  head
    title= title
    
    link(rel='stylesheet', href='/bootstrap/css/bootstrap.css')
    //link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.css')
    link(rel='stylesheet', href='/css/ext/daterangepicker.css')
    link(rel='stylesheet', href='/css/optymetrics.css')
    link(rel='stylesheet', href='/css/engineering-view.css')
    link(rel='stylesheet', href='/css/widget.css')
    link(rel='stylesheet', href='/css/widget2.css')
    style
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
body
  div(class='navbar navbar-fixed-top')    
    div(class='navbar-inner')
      div(class='container-fluid')
        a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
          span(class='icon-bar')
          span(class='icon-bar')
          span(class='icon-bar')
        a(class='brand', href='/#')
          img(src='/img/optify-main-logo.png')
        ul(class='nav')
          li(class='marketing')
            a(href='/#marketing') marketing
          li(class='operations') 
            a(href='/#operations') operations 
          li(class='productdev')
            a(href='/#productdev') productdev 
          li(class='sales')
            a(href='/#sales') sales
        - if(session.userAuthenticated)
            div(class='session')
              a(href='/profile') 
                span(class='user') #{session.user.email} 
              span |  
              - if(session.user.role === 'Admin')
                  a(href='/admin') admin
                  &nbsp;|&nbsp;
              a(href='/session/logout') logout
      div(class='top-stripe')
  div(class='tab-content')!= body
  

  // Javascript included on all pages
  script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/jquery/1.7.2/jquery.min.js')
  script(type='text/javascript', src='/js/ext/jquery.tablesorter.js')
  script(type='text/javascript', src='/bootstrap/js/bootstrap.min.js')
  script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js')
  script(type='text/javascript', src='http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js')

  -each script in scripts
    script(type='text/javascript', src= script)

  script
    // quick hack to turn the background white for easier copy/paste into
    // presentations (CTRL + UP)
    var isCtrl = false;
    $(document).keyup(function (e) {
        if (e.which == 17) isCtrl = false;
    }).keydown(function (e) {
        if (e.which == 17) isCtrl = true;
        if (e.which == 38 && isCtrl == true) {
            $('body').css('background-color', '#ffffff');
            return false;
        }
    });


