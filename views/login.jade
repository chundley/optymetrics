form(action='/sessions/new', method='post')
  legend Login
  - if(message)
    div(class='alert alert-#{message.level}') #{message.content}
  label Email 
  input(type='text', name='email',  placeholder='user@optify.net')
  label Password
  input(type='password', name='password', style='display: block')
  button(type='submit', class='btn btn-primary') Login
